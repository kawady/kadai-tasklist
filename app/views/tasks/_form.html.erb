<%= form_for(task) do |f| %>

<% if task.errors.any? %>

  <div id="error_explanation">
    <h2>
  <%= pluralize(task.errors.count, "error") %>
  prohibited this task from being saved:
    </h2>
    <ul>
      
<% task.errors.full_messages.each do |task| %>
      <li>
        <%=task %>
      </li>
      <% end %>
    </ul>
  </div>
  <%end%>

<%= f.label :content, "タスク" %>

<%= f.text_field :content %>  


<%= f.label :status, "進捗" %>

<%= f.select :status, [["未着手", "未着手"], ["絶望", "絶望"],["あきらめ", "あきらめ"]],  :prompt => "選んでください" %>

<%= f.submit "投稿" %>

<% end %>