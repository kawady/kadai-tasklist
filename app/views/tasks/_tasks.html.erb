<ul class="media-list">
  <% tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>タスク: <%= task.content %></p>
          <p>進捗: <%= task.status %></p> 
          <%= link_to 'このタスクを編集する', edit_task_path(task), class: 'btn btn-primary btn-xs'%>
          <%= link_to 'このタスクを削除する', task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger btn-xs' %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>